{% extends 'base.html.twig' %}

{% block main %}
    <div class="container body-content">
        <div class="row">
            <div class="container body-content">
                <div class="row">
                    {# @var product \ShopBundle\Entity\Product#}
                    {% for product in products %}
                        <div class="col-md-6">
                            <header>
                                <h2>{{ product.name }}</h2>
                            </header>

                            <p>
                                {{ product.price }}
                            </p>

                            <small class="author">
                                {{ product.owner.fullName }}
                            </small>
                            <a href="{{ path('cart_add',{'id':product.id}) }}" class="btn btn-primary btn-sm">Add to cart</a>
                        </div>
                    {% endfor %}
                </div>
            </div>

        </div>
    </div>

{% endblock %}
