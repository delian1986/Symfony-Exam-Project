{% extends 'base.html.twig' %}

{% block main %}
    <div class="container body-content">
        <div class="row">
            <div class="container body-content">
                <div class="row">
                    {# @var product \ShopBundle\Entity\Product#}
                    {% for product in products %}
                        <div class="col-md-6">
                            <article>
                                <header>
                                    <h2>{{ product.name }}</h2>
                                </header>

                                <p>
                                    {{ product.price }}
                                </p>

                                <small class="author">
                                    {{ product.owner.fullName }}
                                </small>

                            </article>
                        </div>
                    {% endfor %}
                </div>
            </div>

        </div>
    </div>

{% endblock %}
