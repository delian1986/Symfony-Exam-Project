{% extends 'base.html.twig' %}

{% block body %}

    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Profile details:</h3>
        </div>
        <div class="panel-body">
            <table class="table table-responsive">
                <tr>
                    <th>Email</th>
                    <td>{{ user.email }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ user.fullName }}</td>
                </tr>
                <tr>
                    <th>Roles</th>
                    <td>{{ user.roles|join(", ") }}</td>
                </tr>
                <tr>
                    <th>Balance</th>
                    <td><strong>{{ user.balance|number_format(2) }}</strong></td>
                </tr>
                <tr>
                    <th>Money spent on shop </th>
                    <td><strong>{{ user.moneySpent|number_format(2) }}</strong></td>
                </tr>
                <tr>
                    <th>Money received </th>
                    <td><strong>{{ user.moneyReceived|number_format(2) }}</strong></td>
                </tr>
            </table>
            <a class="btn btn-primary" href="{{ path('user_profile_edit') }}">Edit</a>
        </div>
    </div>

{% endblock %}