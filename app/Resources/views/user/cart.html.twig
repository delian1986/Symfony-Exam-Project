{% extends 'base.html.twig' %}

{% block main %}

    {# @var product \ShopBundle\Entity\Product #}
    {% if app.user.cart|length >0 %}
        <form method="get" name="checkout" style="display: inline-block" action="{{ path('cart_checkout') }}">
            {% for product in cart %}
                <div>
                    <img src="{{ product.image }}" alt="{{ product.name }}">
                    Name:{{ product.name }} <br/>
                    Price: {{ product.price }} <br/>
                    Quantity: {{ product.quantity }}<br/>
                    <label>
                        <select name="{{ product.name }}">
                            {% for quantity in range(1,product.quantity) %}
                                <option value="{{ quantity }}">{{ quantity }}</option>
                            {% endfor %}
                        </select>
                    </label>
                </div>
            {% endfor %}
            <hr>

            <input type="submit">
        </form>
    {% endif %}
{% endblock %}

